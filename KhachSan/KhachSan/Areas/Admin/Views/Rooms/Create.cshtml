@model KhachSan.Models.Room

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/TemplateAdmin/_admin.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Room</h4>
        <hr />
        @Html.ValidationSummary(true)
     <div class="form-group">
            @Html.LabelFor(model => model.roomName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.roomName)
                @Html.ValidationMessageFor(model => model.roomName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.roomDescription, htmlAttributes: new { @class = "control-label col-md-2" })
