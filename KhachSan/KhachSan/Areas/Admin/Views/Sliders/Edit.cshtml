@model KhachSan.Models.Slider

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/TemplateAdmin/_admin.cshtml";
}



@using (Html.BeginForm("Edit", "Sliders", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Slider</h2>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.image_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.image_Name)
                @Html.ValidationMessageFor(model => model.image_Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.image_Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.image_Description)
                @Html.ValidationMessageFor(model => model.image_Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.image_Path, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @* biến image truyền sang controllers để lưu,readURL(this) để hiển thị hình trước khi lưu  *@
                <input type="file" name="imagePath" onchange=" readURL(this); " />
                <img id="blah" src="#" alt="" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.active, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.active)
                @Html.ValidationMessageFor(model => model.active)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
