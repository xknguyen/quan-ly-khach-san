@using System.Activities.Statements

@{
    ViewBag.Title = "Khách Sạn DaLat Place";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var slide = ViewBag.Slide;
}

@section Slide{
    @* Hiển thị Slider trang chủ *@
    <div class="slider">
        @foreach (var item in slide)
        {
            <img class="slide" src="@item.image_Path">
      
        }
    
    <button class="btn" onclick=" plusDivs(-1) " id="btn1">&#10094;</button>
    <button class="btn" onclick=" plusDivs(1) " id="btn2">&#10095;</button>
</div>
    }

